<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= subject.title %> - NIOS App</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
  <main class="min-h-screen p-6 md:p-12">
    <div class="max-w-4xl mx-auto">
      <div class="mb-8 text-center">
        <h1 class="text-4xl font-bold mb-2"><%= subject.title %></h1>
        <p class="text-lg text-gray-600"><%= subject.description %></p>
      </div>

      <div class="space-y-8">
        <% lessons.forEach(function(lesson) { %>
          <div class="border rounded-lg overflow-hidden">
            <div class="bg-gray-50 p-6">
              <h2 class="text-xl font-semibold flex justify-between items-center">
                <span>Lesson <%= lesson.lesson_number %>: <%= lesson.title %></span>
                <span class="text-sm font-medium bg-gray-200 text-gray-800 px-2 py-1 rounded"><%= lesson.module %></span>
              </h2>
            </div>
            <div class="p-6">
              <div class="mb-6">
                <h3 class="font-semibold text-lg mb-2">Objectives</h3>
                <ul class="list-disc list-inside space-y-1 text-gray-700">
                  <% lesson.objectives.forEach(function(obj) { %>
                    <li><%= obj %></li>
                  <% }); %>
                </ul>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
  </main>
</body>
</html>